<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.miwokvocab">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiwokVocab"
        tools:ignore="AllowBackup">
        <activity
            android:name=".PhrasesActivity"
            android:label="@string/category_phrases"
            android:exported="false" />
        <activity
            android:name=".ColorsActivity"
            android:label="@string/category_colors"
            android:exported="false" />
        <activity
            android:name=".FamilyMembersActivity"
            android:label="@string/category_family"
            android:exported="false" />
        <activity
            android:name=".NumbersActivity"
            android:label="@string/category_numbers"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:exported="true">
            <!--Adding the android:label attribute to the .MainActivity
                will remove the Application name specified by
                android:label="@string/app_name under application-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>